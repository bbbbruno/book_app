<%= form_with(model: book, local: true) do |form| %>
<% if book.errors.any? %>
<div id="error_explanation" class="alert alert-danger">
  <p><%= pluralize(book.errors.count, "error") %> prohibited this book from being saved:</p>

  <ul>
    <% book.errors.full_messages.each do |message| %>
    <li><%= message %></li>
    <% end %>
  </ul>
</div>
<% end %>

<div class="form-group row">
  <%= form.label :title, class: 'col-md-2 col-form-label' %>
  <div class="col-md-10">
    <%= form.text_field :title, class: 'form-control' %>
  </div>
</div>

<div class="form-group row">
  <%= form.label :memo, class: 'col-md-2 col-form-label' %>
  <div class="col-md-10">
    <%= form.text_area :memo, class: 'form-control', rows: 5 %>
  </div>
</div>

<div class="form-group row">
  <%= form.label :author, class: 'col-md-2 col-form-label' %>
  <div class="col-md-10">
    <%= form.text_field :author, class: 'form-control' %>
  </div>
</div>

<div class="form-group row">
  <%= form.label :picture, class: 'col-md-2 col-form-label' %>
  <div class="col-md-10">
    <%= form.file_field :picture, class: 'form-control-file' %>
  </div>
</div>

<div class="actions">
  <%= form.submit class: 'btn btn-primary mb-3' %>
</div>
<% end %>