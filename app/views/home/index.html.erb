<h1><%= t '.title' %></h1>

<div class="table-responsive-md">
  <table class="table table-hover">
    <thead>
      <tr>
        <th colspan="1"></th>
        <th><%= Book.human_attribute_name(:title) %></th>
        <th><%= Book.human_attribute_name(:memo) %></th>
        <th><%= Book.human_attribute_name(:author) %></th>
        <th><%= Book.human_attribute_name(:picture) %></th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @books.each do |book| %>
        <tr>
          <td>
            <%= link_to image_tag(book.user.profile.profile_avatar(:sm), style: 'border-radius: 50%;'), profile_path(book.user) %>
          </td>
          <td><%= book.title %></td>
          <td><%= book.memo %></td>
          <td><%= book.author %></td>
          <td><%= link_to t('dictionary.button.link'), url_for(book.picture) if book.picture.attached? %></td>
          <td class="link home">
            <%= link_to t('dictionary.button.show'), user_book_path(book.user, book) %>
          </td>
          <td class="link home">
            <% if current_user?(book.user) %>
              <%= link_to t('dictionary.button.edit'), edit_user_book_path(current_user, book) %>
            <% end %>
          </td>
          <td class="link home">
            <% if current_user?(book.user) %>
              <%= link_to t('dictionary.button.destroy'), user_book_path(current_user, book), method: :delete, data: { confirm: 'Are you sure?' } %>
            <% end %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>

<% if current_user?(@user) %>
  <%= link_to t('dictionary.button.new book'), new_user_book_path(current_user), class: 'btn btn-primary mb-3' %>
<% end %>

<%= paginate @books %>
<div class="paginate-info"><%= page_entries_info @books %></div>
